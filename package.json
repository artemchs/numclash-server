{
  "name": "numclash-server",
  "version": "1.0.0",
  "author": "Artem Chernysh",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "build": "tsc && tsup",
    "start:dev": "./start-database.sh && node --import=tsx --watch src/index.ts",
    "start:prod": "node dist/index.js",
    "start:migrate:prod": "pnpm exec prisma migrate deploy && pnpm start:prod",
    "lint": "biome lint --fix",
    "format": "biome format --write",
    "check": "pnpm lint && pnpm format && pnpm build && pnpm test"
  },
  "dependencies": {
    "@prisma/client": "6.6.0",
    "@types/cookie": "^1.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/jsonwebtoken": "^9.0.9",
    "cookie": "^1.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "express-rate-limit": "7.5.0",
    "helmet": "8.1.0",
    "http-status-codes": "2.3.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "pino": "9.6.0",
    "pino-http": "10.4.0",
    "ws": "^8.18.1",
    "zod": "3.24.3",
    "zod-express-middleware": "^1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.1",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth2": "^0.1.10",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "3.1.2",
    "pino-pretty": "13.0.0",
    "prisma": "^6.6.0",
    "supertest": "7.1.0",
    "tsup": "8.4.0",
    "tsx": "4.19.3",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.2"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  },
  "packageManager": "pnpm@10.9.0"
}
